#pragma once

#include <string>
#include <iostream>
using namespace std;

struct Date {
  int year, month, day;
};

ostream& operator << (ostream& stream, const Date& date) {
	return stream << date.year << " " << date.month << " " << date.day;
}

struct Time {
  int hours, minutes;
};

ostream& operator << (ostream& stream, const Time& time) {
	return stream << time.hours << " " << time.minutes;
}

struct AirlineTicket {
  string from;
  string to;
  string airline;
  Date departure_date;
  Time departure_time;
  Date arrival_date;
  Time arrival_time;
  int price;
};
